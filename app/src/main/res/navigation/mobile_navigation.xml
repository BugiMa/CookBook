<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_cookbook">

    <fragment
        android:id="@+id/navigation_cookbook"
        android:name="com.example.cookbook.ui.cookbook.CookBookFragment"
        android:label="@string/title_cookbook"
        tools:layout="@layout/fragment_cookbook" >
        <action
            android:id="@+id/action_navigation_cookbook_to_recipeFragment"
            app:destination="@id/recipe_fragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_favorites"
        android:name="com.example.cookbook.ui.cookbook.CookBookFragment"
        android:label="@string/title_favorites"
        tools:layout="@layout/fragment_cookbook" />

    <fragment
        android:id="@+id/navigation_shopping_list"
        android:name="com.example.cookbook.ui.shopping.ShoppingListFragment"
        android:label="@string/title_shopping_list"
        tools:layout="@layout/fragment_shopping_list" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.cookbook.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        />
    <fragment
        android:id="@+id/recipe_fragment"
        android:name="com.example.cookbook.ui.recipe.RecipeFragment"
        android:label="fragment_recipe"
        tools:layout="@layout/fragment_recipe" >
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>

</navigation>