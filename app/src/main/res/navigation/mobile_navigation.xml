<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_cookbook">

    <fragment
        android:id="@+id/navigation_cookbook"
        android:name="com.example.cookbook.ui.cookbook.CookBookFragment"
        android:label="@string/title_cookbook"
        tools:layout="@layout/fragment_cookbook" />

    <fragment
        android:id="@+id/navigation_favorites"
        android:name="com.example.cookbook.ui.favorites.FavoritesFragment"
        android:label="@string/title_favorites"
        tools:layout="@layout/fragment_favorites" />

    <fragment
        android:id="@+id/navigation_shopping_list"
        android:name="com.example.cookbook.ui.shopping.ShoppingListFragment"
        android:label="@string/title_shopping_list"
        tools:layout="@layout/fragment_shopping_list" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.cookbook.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_shopping_list" />

</navigation>